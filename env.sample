# NextAuth configuration
# Required for admin authentication
NEXTAUTH_SECRET=replace_this_with_your_actual_secret_in_production
NEXTAUTH_URL=http://localhost:3000 # Use your actual domain in production

# Azure AD configuration for Microsoft SSO
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_TENANT_ID=your-azure-tenant-id

# Email settings (for reference)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=username
SMTP_PASSWORD=password
EMAIL_FROM=noreply@aistudyplans.com

# Development flags
NEXT_PUBLIC_RESEND_CONFIGURED="false" 